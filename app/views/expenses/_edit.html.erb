<%= form_for(@expense, url: expense_path(@expense), method: :put, remote: true) do |form| %>
  <div class="modal-header">
    <p class="heading">Edit Expense</p>
    <button type="button" class="close" data-dismiss="modal">x</button>
  </div>

  <div id="editExpense" class="modal-body">
    <div class="form-group">  
      <% if alert.present? %>
        <p id="alert" class="alert alert-danger"><% alert %> Invalid input </p>
      <% end %>
    </div>
    <div class="form-group">
      <%= form.select(:category_id, Category.all.collect {|u| [u.name, u.id]}, { include_blank: 'Select Category' }, class: 'form-control') %>
    </div>
    <div class="form-group" >  
      <%= form.text_field :amount, placeholder: 'Amount', class: 'form-control', required: 'true' %>
    </div>
    <div class="form-group" >  
      <%= form.date_field :expended_at, class: 'form-control', required: true %>
    </div>
    <div class="form-group" >  
      <%= form.text_field :title, placeholder: 'Title', class: 'form-control', required: 'true' %>
    </div>
    <div class="form-group" >  
      <%= form.text_area :description, placeholder: 'Description', class: 'form-control' %>
    </div>
    <div class="form-group" >  
      <%= form.file_field :images, placeholder: 'Image', class: 'form-control', multiple: true%>
    </div>
  </div>

  <div class="modal-footer">
    <div class="form-group" >
      <%= form.submit "Update", class: 'btn btn-success form-control' %>
    </div>  
  </div>
<% end %>