<%= form_for(@expense, url: expenses_path, method: :post, remote: true) do |form| %>
  <div class="modal-header">
    <p class="heading">Add Expense</p>
    <button type="button" class="close" data-dismiss="modal">x</button>
  </div>
  <div id="addExpense" class="modal-body">
    <div class="form-group" id="display-errors"> </div>
    <div class="form-group">
      <%= form.select :category_id, options_for_select(Category.pluck(:name, :id).to_h),{ include_blank: 'Select Category' }, class: 'form-control'%>
    </div>
    <div class="form-group" >  
      <%= form.text_field :amount, placeholder: 'Amount', class: 'form-control', required: 'true' %>
    </div>
    <div class="form-group" >  
      <%= form.date_field :expended_at, class: 'form-control', required: true %>
    </div>
    <div class="form-group" >  
      <%= form.text_field :title, placeholder: 'Title', class: 'form-control', required: 'true' %>
    </div>
    <div class="form-group" >  
      <%= form.text_area :description, placeholder: 'Description', class: 'form-control' %>
    </div>
    <div class="form-group" >  
      <%= form.file_field :images, placeholder: 'Image', class: 'form-control', multiple: true%>
    </div>
  </div>
  <div class="modal-footer">
    <%= form.submit "Add", class: 'btn btn-success' %>
  </div>
<% end %>