<%= form_for(@category, url: category_path(@category), method: :put, remote: true) do |form| %>
  <div class="modal-header">
    <p class="heading">Update Category</p>
  </div>
  <div class="modal-body">
    <% @category.errors.full_messages_for(:name).each do |message| %>
      <div  class="alert alert-danger" role="alert"><%= message %></div>
    <% end %>
    <div class="form-group " >  
      <%= form.text_field :name, placeholder: 'Category name', class: 'form-control', required: 'true' %>
    </div>
    <div class="form-group">  
      <% if notice.present? %>
        <p id="notice" class="alert alert-success"><% notice %>Category added</p>
      <% end %>
    </div>
  </div>
  <div class="modal-footer">
    <div class="form-group" >
      <%= form.submit "Update", class: 'btn btn-success form-control' %>
    </div>
  </div>
<% end %>