<%= form_for(@category, url: category_path, method: :put) do |form| %>
  <div id="addCatgeoy" class="wraper text-center">
    <div>
      <div>
        <p class="heading">Update Category</p>
      </div>
      <div class="form-section ">
        <div class="form-group">  
          <% if alert.present? %>
            <p id="alert" class="success btn btn-danger form-control"> <% alert %>  Contains letters only!! </p>
          <% end %>
        </div>
        <div class="form-group " >  
          <%= form.text_field :name, placeholder: 'Category name', class: 'form-control', required: 'true' %>
        </div>
        <div class="form-group" >
          <%= form.submit "Update category", class: 'btn btn-success form-control' %>
        </div>
        <div class="form-group">  
          <% if notice.present? %>
            <p id="notice" class="success btn btn-success form-control"> <% notice %>  Category added</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>