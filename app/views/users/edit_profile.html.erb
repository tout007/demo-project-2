<%= form_for(current_user, url: update_profile_users_path, method: :put) do |form| %>
  <div id="editform" class="login-page">
    <div class="row">
      <div class="col-md-6 text-section">
        <h1 style="color: blue; font-weight: bold;">Expense Manager</h1>
        <p class="description">It helps you to manage your daily expenses very easily.</p>
      </div>
      <div class="col-md-6 center text-center">
        <div class="form-group " >  
          <%= form.text_field :name, placeholder: 'Name', class: 'form-control', required: 'true' %>
        </div>
        <div class="form-group text-left" >  
          <%= form.label :gender %>
          <%= form.radio_button :gender, 'Male' %> Male
          <%= form.radio_button :gender, 'Female' %> Female
        </div>
        <div class="form-group" >  
          <%= form.text_field :city, placeholder: 'city', class: 'form-control' %>
        </div>
        <div class="form-group" >  
          <%= form.email_field :email, placeholder: 'Email', class: 'form-control' %>
        </div>
        <div class="form-group" >  
          <%= form.text_field :password, class: 'form-control' %>
        </div>
        <div class="form-group" >  
          <%= form.file_field :image, placeholder: 'Image', class: 'form-control' %>
        </div>
        <div class="form-group" >
          <%= form.submit "Update", class: 'btn btn-success form-control' %>
        </div>
        <div class="form-group">
          <% if alert.present? %>
            <p id="alert" class="alert alert-success"> <% alert %> Profile was successfully updated</p>   
          <% end %>
        </div>
      </div>
    </div>
  </div>

<% end %>

