<%= form_for(@limit, url: limit_path(@limit), method: :put, remote: true) do |form| %>
  <div class="modal-header">
    <p class="heading">Edit Limit</p>
    <button type="button" class="close" data-dismiss="modal">x</button>
  </div>

  <div id="editExpense" class="modal-body">
    <div class="form-group">  
      <% if alert.present? %>
        <p id="alert" class="alert alert-danger"><%alert%>Only integers allowed</p>
      <% end %>
    </div>
    <div class="form-group text-center">  
      <%= form.select(:month_at, Date::MONTHNAMES.slice(1,12), { include_blank: 'Select Month' }, class: 'form-control') %>
    </div>
    <div class="form-group" >  
      <%= form.text_field :monthly_limit, placeholder: 'Add monthly limit', class: 'form-control', required: 'true' %>
    </div>
    <div class="form-group">  
      <% if notice.present? %>
        <p id="notice" class="alert alert-success"><%notice%>Updated successfully</p>
      <% end %>
    </div>
  </div>
  <div class="modal-footer">
    <div class="form-group"> 
      <%= form.submit "Update", class: 'btn btn-success form-control' %>    
    </div>
  </div>  
<% end %>