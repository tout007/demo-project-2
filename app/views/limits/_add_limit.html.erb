<%= form_for(@limit, url: limits_path, method: :post) do |form| %>
  <div class="modal-header">
    <p class="heading" align="center">Add Limit</p>
    <button type="button" class="close" data-dismiss="modal">x</button>
  </div>
  <div class="modal-body" id="addCatgeoy">
    <div class="form-group">  
      <% if alert.present? %>
        <p id="alert" class="alert alert-danger"><% alert %> Only integers allowed </p>
      <% end %>
    </div>
    <div class="form-group text-center">  
      <%= form.select :month_at, options_for_select(Date::MONTHNAMES.slice(1,12)),{ include_blank: 'Select Month' }, class: 'form-control'%>
    </div>
    <div class="form-group" >  
      <%= form.text_field :monthly_limit, placeholder: 'Add monthly limit', class: 'form-control', required: 'true' %>
    </div>
    <div class="form-group">  
      <% if notice.present? %>
        <p id="notice" class="success btn btn-success form-control"> <% notice %>  Category added</p>
      <% end %>
    </div>
  </div>
  <div class="modal-footer">
    <%= form.submit "Add", class: 'btn btn-success' %>
  </div>
<% end %>